<div class="container">
  <nav class="navbar navbar-light navbar-expand-lg bg-light rounded-4 mt-2">

    <%= link_to "Moviez", root_path, class: "btn btn-dark fw-bold rounded-3 mx-2" %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav w-100 d-flex justify-content-between">
        <p class="nav-item">Menu<p>

        <% if user_signed_in? %>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.email %>
            </a>
            <ul class="dropdown-menu dropdown-menu-light">
              <li><%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>

        <% else %>

          <div class="d-flex">
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
            </li>
          </div>

        <% end %>
      </ul>
    </div>

  </nav>
</div>
