<div id="<%= dom_id movie %>">

  <div class="card">
    <% if movie.image.attached? %>
      <p>
      <%= image_tag movie.image %>
      </p>
    <% end %>
    <div class="card-body">
      <p>
      <strong>Title:</strong>
      <%= movie.title %>
      </p>

      <p>
      <strong>Director:</strong>
      <%= movie.director %>
      </p>
    </div>
  </div>
