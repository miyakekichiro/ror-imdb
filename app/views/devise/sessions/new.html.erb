<div class="card-header text-center text-bg-dark rounded-4">
  <h2>Log In</h2>                                                                                                                         
</div>                                                                                                                                    
                                                                                                                                          
<div class="d-flex justify-content-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>                                                     
  <div class="card-body border border-dark border-2 rounded-4 p-3">
    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control", style: "width: 255px" %>
    </div>

    <div class="field form-group mt-2">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", style: "width: 255px" %>
    </div>

    <div class="actions mt-2 mb-2">
      <% if devise_mapping.rememberable? %>
        <div class="field form-group form-check mt-2 d-flex">
          <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox" %>
          <%= f.label :remember_me, class: "form-check-label px-2" %>
        </div>
      <% end %>
      <%= f.submit "Log In", class: "btn btn-outline-dark btn-sm" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
